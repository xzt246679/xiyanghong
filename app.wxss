/**app.wxss**/
/* 不显示右侧滚动条 */
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.nav{
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-title{
  width: 100%;
  height: 65px;
  line-height: 100px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  font-family:PingFang-SC-Medium;
  font-size:36rpx;
  letter-spacing:2px;
  background:#6393e7;
}
.nav .back{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 20rpx;
}
.nav .city{
  width: 40%;
  height: 22px;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10px 15px;
}
.bg-white{
  background-color: #E31C21;
}
.bg-gray{
  background-color: #f7f7f7;
}
.overflow{
  overflow: auto;
}
.hidden{
  overflow: hidden;
}
button::after{
  border:none;
}

@import "./comps/toast/toast.wxss";
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
